<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ieeeias.vit_finders">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:exported="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:excludeFromRecents="true"
            android:exported="true"/>
        <activity
            android:name=".view.ItemDescriptionActivity"
            android:exported="true"/>
        <activity android:name=".view.OtpVerifyActivity"
            android:exported="true"/>

        <activity
            android:name=".fragments.BlankFragment"
            android:exported="true"/>
        <activity
            android:name=".fragments.LostItemsFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".fragments.HelpFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".fragments.ProfileFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".fragments.AboutUsFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainActivity2"
            android:exported="true"/>
        <activity
            android:name=".fragments.AddItemFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />
    </application>

</manifest>